<div class="container">
  <h1>Edit Fee</h1>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= bootstrap_form_for(@fee) do |form| %>

        <%= form.label :fee_name, "Fee name:" %>
        <%= form.text_field :fee_name, hide_label: true %>

        <%= form.label :fee_price, "Fee price:" %>
        <%= form.text_field :fee_price, hide_label: true %>

        <%= form.label :fee_category, "Fee Category:" %> (for example : "overweight" charge)
        <%= form.text_field :fee_category, hide_label: true %>

        <%= form.label :fee_notes, "Fee notes:" %>
        <%= form.text_area :fee_notes, hide_label: true, style: "resize:none" %>

        <%= form.submit "Edit Fee", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
