<div class="container">
  <h1>Create Service</h1>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= bootstrap_form_for(@service) do |form| %>

        <%= form.label :service_name, "Service name:" %>
        <%= form.text_field :service_name, hide_label: true %>

        <%= form.label :service_baseprice, "Base price:" %>
        <%= form.text_field :service_baseprice, hide_label: true %>

        <%= form.label :service_notes, "Service notes:" %>
        <%= form.text_area :service_notes, hide_label: true, style: "resize:none" %>

        <%= form.submit "Create service", class: "btn btn-primary" %>
      <% end %>
    </div>
    </div class="col-md-4"></div>
  </div>
</div>
